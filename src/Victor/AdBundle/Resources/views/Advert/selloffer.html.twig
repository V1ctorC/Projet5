{% extends '@VictorCore/layout.html.twig' %}

{% block body %}

    <a href="{{ path('victor_core_home') }}"><input type="button" class="persoButtonReturn" value="Revenir à l'accueil"></a>

    <h2>Mon offre de vente : </h2>
    <em>En faisant votre offre vous acceptez qu'une commission de 10% soit prélevée de la vente conformément aux
        <a href="{{ path('victor_ad_tos') }}">CGV</a></em>

    {{ form_start(form) }}

    <div class="container block-register">
        <h3>Mon offre</h3>
        {{ form_row(form.price) }}
        <div id="realPrice">test</div>

        {{ form_row(form.status) }}

        {{ form_row(form.description) }}

    </div>

    {{ form_rest(form) }}

    {{ form_end(form) }}

    <script>

        var sum = document.getElementById('victor_adbundle_offer_price');
        sum.addEventListener('blur', function (e) {

            var field = e.target.value;
            var realpricebloc = document.getElementById('realPrice');
            var realSum = (field*0.9);

            if (field !== "")
            {
                realpricebloc.style.display = 'block';
                var roundedsum = realSum.toFixed(2);
                realpricebloc.innerHTML = 'Votre montant perçu après la vente : ' + roundedsum + '€';
            }
            else
            {
                realpricebloc.style.display = 'none';
            }
        })
    </script>

{% endblock %}