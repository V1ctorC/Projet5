{% extends '@VictorCore/layout.html.twig' %}

{% block body %}

    <h2>Vos offre en cours :</h2>

    {% if listCurrentoffer == null %}

        <p>Vous n'avez actuellement aucune annonce en cours</p>

    {% else %}

        <div class="table-responsive">

            <table class="table table-bordered table-hover">
                <tr>
                    <th>Vente n°</th>
                    <th>Marque</th>
                    <th>Modèle</th>
                    <th>Capacité</th>
                    <th>Couleur</th>
                    <th>Prix</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>

                {% for currentoffer in listCurrentoffer %}

                    <tr>
                        <td>{{ currentoffer.id }}</td>
                        <td>{{ currentoffer.phone.brand }}</td>
                        <td>{{ currentoffer.phone.model }}</td>
                        <td>{{ currentoffer.phone.capacity }}Go</td>
                        <td>{{ currentoffer.phone.color }}</td>
                        <td>{{ currentoffer.price }}€</td>
                        <td><a href="{{ path('victor_ad_editoffer', {'id': currentoffer.id}) }}"><input type="button" class="persoButton" value="Modifier l'offre"></a></td>
                        <td><a href="{{ path('victor_ad_deleteoffer', {'id': currentoffer.id}) }}"><input type="button" class="persoButton" value="Supprimer cette offre"></a></td>
                    </tr>

                {% endfor %}

            </table>
        </div>

    {% endif %}

{% endblock %}