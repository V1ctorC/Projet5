{% extends 'VictorAdBundle::layout.html.twig' %}

{% block victorad_body %}

<h3>Votre choix :</h3>
    <div class="phoneSelect center-block">

        <span id="brand">{{ phone.brand }} </span><br />
        <span id="model">{{ phone.model }} </span><br />
        Couleur : {{ phone.color }} <br />
        Capacit√© : {{ phone.capacity }} Go <br />
        <img src="{{ phone.image.url }}" class="imgPhone">

    </div>



    <hr />

    <h4>Offres</h4>

    {% for offer in listOffers %}

        <ul>
            <li>{{ offer.price }}</li>
        </ul>

    {% endfor %}

    {% if listOffers == null %}

        <p>Il n'y a actuellement aucune offre concernant ce produit</p>

    {% endif %}

    <h4>Faire une offre</h4>

    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

        <p>Vous pensez faire mieux ? Faite votre proposition <a href="{{ path('victor_ad_selloffer', {'phone': phone.model, 'id': phone.id}) }}">ici</a></p>

    {% else %}

        <p>Si vous souhaitez faire une offre ... <a href="{{ path('fos_user_security_login') }}">Connectez-vous</a></p>

    {% endif %}

{% endblock %}