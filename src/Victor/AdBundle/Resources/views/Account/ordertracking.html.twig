{% extends '@VictorCore/layout.html.twig' %}

{% block body %}

    <a href="{{ path('victor_ad_account') }}">Revenir à mon compte</a>

    <h3>Le suivi de la commande</h3> <br />

    <div class="progress">
        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="{{ progress }}" aria-valuemin="0" aria-valuemax="100" style="width:{{ progress }}%">
            {{ progress }}%
        </div>
    </div>

    <table class="table">
        <tr>
            <th scope="col">Commande</th>
            <th scope="col">Paiement</th>
            <th scope="col">Reception</th>
            <th scope="col">Conformité</th>
            <th scope="col">Envoi</th>
        </tr>

        <tr>
            <th>{{ ordernumber }}</th>
            <th>{{ paydate|date('d-m-Y') }}</th>
            {% if progress == 50 %}
                <th>{{ recepdate|date('d-m-Y') }}</th>
            {% else %}
                <th>--</th>
            {% endif %}
            {% if progress == 75 %}
                <th>{{ conformdate|date('d-m-Y') }}</th>
            {% else %}
                <th>--</th>
            {% endif %}
            {% if progress == 100 %}
                <th>{{ sendate|date('d-m-Y') }}</th>
            {% else %}
                <th>--</th>
            {% endif %}
        </tr>
    </table>

{{ infos }}

{% endblock %}