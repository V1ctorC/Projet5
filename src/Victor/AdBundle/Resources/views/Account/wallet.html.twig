{% extends '@VictorCore/layout.html.twig' %}

{% block body %}

    <a class="persoButtonReturn" href="{{ path('victor_ad_account') }}">Revenir sur le compte</a>


    <div class="container-fluid wallet-block">
        <h2 style="text-align: center">Mon porte-feuille</h2>
        <div id="wallet-img">
            <img src="{{ asset('bundles/victorad/images/wallet.png') }}" alt="portefeuille"><br />
        </div>
        <div id="wallet-explain">
            <p>Vous trouverez ici le contenu de votre porte-feuille avant de le transférer sur votre compte</p>
        </div>
        <div id="wallet-sum">
            <p>Vous avez actuellement :<br /></p>
            <p><b id="wallet-price">{{ sum }}€</b></p>
        </div>

        {% if sum > 0 %}
        <div id="wallet-button">
            <a class="persoButton centerButton" href="{{ path('victor_ad_confirmwallet') }}">Retirer mon argent</a>
        </div>
        {% endif %}
    </div>


{% endblock %}