{% trans_default_domain 'FOSUserBundle' %}


<div class="container">

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        {% endif %}

        <h2 class="form-signin-heading">Se connecter</h2>


        {% if error %}
            <div class="alert alert-danger">
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        {% endif %}

        <label for="inputUsername" class="sr-only">Username</label>
        <input type="text" id="inputUsername" name="_username" class="form-control" value="{{ last_username }}" placeholder="Pseudo" required autocomplete="username" autofocus>

        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="inputPassword" class="form-control" name="_password" required="required" autocomplete="current-password" placeholder="Mot de Passe">

        <div id="resetPassword">
            <a href="{{ path('fos_user_resetting_request') }}">Mot de passe oubli√©</a>
        </div>


        <button class="persoButton centerButton" type="submit" name="_submit">Connexion</button>
    </form>

</div>

