<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}iVente !{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('bundles/victorad/css/style.css') }}">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    {% endblock %}
</head>

<body>
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand link-menu" href="{{ path('victor_core_home') }}">iVente !</a>
        </div>


        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav link-menu">
                <li><a href="{{ path('victor_core_home') }}" class="navigation">Accueil</a></li>
                <li><a href="{{ path('victor_ad_sell') }}" class="navigation">Vendre</a></li>
                <li><a href="{{ path('victor_ad_buy') }}" class="navigation">Acheter</a> </li>
            </ul>
            <ul class="nav navbar-nav navbar-right" id="rightnav">
                <!--<li><a href="#" class="navigation">Mon compte</a></li>-->
                {% if is_granted('ROLE_ADMIN') %}
                    <li><a href="{{ path('victor_ad_admin') }}">Administration du site</a></li>
                {% endif %}
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a href="{{ path('victor_ad_account') }}">Connecté en tant que {{ app.user.username }}</a></li>
                    <li><a href="{{ path('fos_user_security_logout') }}">Déconnexion</a></li>
                {% else %}
                    <li><a href="{{ path('fos_user_registration_register') }}" id="registre">Inscription</a></li>
                    <li><a href="{{ path('fos_user_security_login') }}" id="connect">Connexion</a></li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

<div id="content" class="col-md-12">
    {% block body %}
    {% endblock %}
</div>

